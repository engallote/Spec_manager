<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#90E4FF"></solid>
            <stroke
                android:width="1dp"
                android:color="#90E4FF"></stroke>
            <!--<padding-->
                <!--android:left="12dp"-->
                <!--android:top="5dp"-->
                <!--android:right="10dp"-->
                <!--android:bottom="5dp"></padding>-->
            <corners
                android:radius="10dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#0054FF"></solid>
            <stroke
                android:width="1dp"
                android:color="#0054FF"></stroke>
            <!--<padding-->
                <!--android:left="12dp"-->
                <!--android:top="5dp"-->
                <!--android:right="10dp"-->
                <!--android:bottom="5dp"></padding>-->
            <corners
                android:radius="20dp"></corners>
        </shape>
    </item>
</selector>