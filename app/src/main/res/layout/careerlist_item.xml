<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/shape_career">
    <TextView
        android:id="@+id/name"
        android:text="회사 이름"
        android:textStyle="bold"
        android:textColor="#353535"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/position1"
            android:text="직위"
            android:textColor="#353535"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:text=" / "
            android:textColor="#353535"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/position2"
            android:text="직책"
            android:textColor="#353535"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>

    <TextView
        android:id="@+id/task"
        android:text="업무"
        android:textColor="#353535"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date1"
            android:text="입사"
            android:textColor="#353535"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:text=" ~ "
            android:textColor="#353535"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date2"
            android:text="퇴사"
            android:textColor="#353535"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TextView
        android:id="@+id/status"
        android:visibility="gone"
        android:text="현재상태"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/etc"
        android:visibility="gone"
        android:text="참고"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/form"
        android:text="고용형태"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView
        android:id="@+id/adress"
        android:text="주소"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
</LinearLayout>