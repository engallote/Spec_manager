<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:padding="20dp" android:background="#368AFF">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/layout_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#002266"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:text="회사명"/>
                <EditText
                    android:id="@+id/name"
                    android:inputType="text"
                    android:background="@drawable/edittext_shape_attr"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#002266"
                    android:layout_gravity="center"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주소"/>
                <EditText
                    android:id="@+id/adress"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:background="@drawable/edittext_shape_attr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#002266"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="고용형태"/>
                <Spinner
                    android:id="@+id/form"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:entries="@array/고용형태"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#002266"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="직위/직책"/>
                <LinearLayout
                    android:layout_weight="2.5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/position1"
                        android:background="@drawable/edittext_shape_attr"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text=" / "
                        android:textColor="#002266"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/position2"
                        android:background="@drawable/edittext_shape_attr"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#002266"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="담당업무"/>
                <EditText
                    android:hint="개발, 기획, 회계..."
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_shape_attr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/task"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="입사날짜"
                    android:layout_weight="7.5"
                    android:textStyle="bold"
                    android:textColor="#002266"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/year1"
                            android:maxLength="4"
                            android:hint="YYYY"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="8"
                            android:text="년"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/month1"
                            android:layout_weight="2"
                            android:maxLength="2"
                            android:hint="MM"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="월"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/day1"
                            android:maxLength="2"
                            android:hint="DD"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:background="@drawable/edittext_shape_attr"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="일"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#002266"
                    android:text="현재상태"/>
                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_weight="2.5"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/work"
                        android:text="재직"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:layout_weight="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/out"
                        android:layout_gravity="center"
                        android:text="퇴사"
                        android:layout_weight="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="퇴사날짜"
                    android:layout_weight="7.5"
                    android:textStyle="bold"
                    android:textColor="#002266"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/year2"
                            android:layout_weight="2"
                            android:maxLength="4"
                            android:hint="YYYY"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="8"
                            android:text="년"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/month2"
                            android:layout_weight="2"
                            android:maxLength="2"
                            android:hint="MM"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="월"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/day2"
                            android:maxLength="2"
                            android:hint="DD"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:background="@drawable/edittext_shape_attr"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="일"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:textColor="#002266"
                android:textStyle="bold"
                android:text="참고사항"/>

            <EditText
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:scrollbars="vertical"
                android:hint="참고사항을 간략히 입력해주세요."
                android:textSize="15dp"
                android:textColor="#353535"
                android:background="@drawable/dot_shape_attr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="5"
                android:lines="5"
                android:gravity="top|left"
                android:id="@+id/etc"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_shape"
                    android:onClick="onClick"
                    android:text="저장"/>
                <Button
                    android:id="@+id/cancel"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_shape"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="취소"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>