<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:padding="20dp" android:background="#368AFF">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/layout_shape_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            android:text="회사명"
            android:textColor="#002266"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/adress"
            android:layout_marginTop="10dp"
            android:textColor="#002266"
            android:text="주소"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="직위/직책"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/position1"
                    android:text="직위"
                    android:textStyle="bold"
                    android:textColor="#5D5D5D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" / "
                    android:textStyle="bold"
                    android:textColor="#5D5D5D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/position2"
                    android:text="직책"
                    android:textStyle="bold"
                    android:textColor="#5D5D5D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="고용형태"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/form"
                android:text="정규직"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="#5D5D5D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="담당업무"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/task"
                android:text="업무"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="#5D5D5D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="입사일"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/date1"
                android:text="입사일"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="#5D5D5D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="퇴사일"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/date2"
                android:text="퇴사일"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="#5D5D5D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TextView
            android:layout_marginTop="20dp"
            android:text="참고사항"
            android:textStyle="bold"
            android:textColor="#002266"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/textshow_shape_attr"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/etc"
                    android:padding="10dp"
                    android:text="참고"
                    android:textColor="#353535"
                    android:background="@drawable/textshow_shape_attr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/modify"
                android:onClick="onClick"
                android:text="수정"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<Button-->
                <!--android:id="@+id/cancel"-->
                <!--android:onClick="onClick"-->
                <!--android:text="취소"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>