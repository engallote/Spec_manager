<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:padding="20dp" android:background="#368AFF">
    <ScrollView
        android:id="@+id/scrollView"
        android:background="@drawable/layout_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="언어"
                    android:textColor="#002266"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/name"
                    android:layout_weight="2.5"
                    android:background="@drawable/edittext_shape_attr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="등록번호"
                    android:textColor="#002266"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/number"
                    android:layout_weight="2.5"
                    android:background="@drawable/edittext_shape_attr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="발급번호"
                    android:textColor="#002266"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/number2"
                    android:layout_weight="2.5"
                    android:background="@drawable/edittext_shape_attr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="발급기관"
                    android:textColor="#002266"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/agency"
                    android:layout_weight="2.5"
                    android:background="@drawable/edittext_shape_attr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="응시날짜"
                    android:textColor="#002266"
                    android:layout_weight="7.5"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/year1"
                            android:maxLength="4"
                            android:hint="YYYY"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="8"
                            android:text="년"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/month1"
                            android:maxLength="2"
                            android:hint="MM"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="월"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/day1"
                            android:maxLength="2"
                            android:hint="DD"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:background="@drawable/edittext_shape_attr"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="일"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="유효기간"
                    android:textColor="#002266"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:layout_weight="2.5"
                    android:id="@+id/rg"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/yes"
                        android:text="있음"
                        android:checked="true"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="없음"
                        android:id="@+id/no"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </TableRow>

            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="유효날짜"
                    android:textColor="#002266"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/year2"
                            android:maxLength="4"
                            android:hint="YYYY"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="8"
                            android:text="년"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/month2"
                            android:maxLength="2"
                            android:hint="MM"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="월"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/day2"
                            android:maxLength="2"
                            android:hint="DD"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:background="@drawable/edittext_shape_attr"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="일"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>


            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="점수/등급"
                    android:textColor="#002266"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/score"
                    android:layout_weight="2.5"
                    android:background="@drawable/edittext_shape_attr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_shape"
                    android:onClick="onClick"
                    android:text="저장"/>
                <Button
                    android:id="@+id/cancel"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_shape"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="취소"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>