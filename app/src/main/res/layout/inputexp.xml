<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:padding="20dp" android:background="#368AFF">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/layout_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="8.5"
                android:textColor="#002266"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="제목"/>
            <EditText
                android:background="@drawable/edittext_shape_attr"
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:id="@+id/title"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#002266"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_weight="8.5"
                android:text="날짜"/>
            <LinearLayout
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <EditText
                        android:id="@+id/year"
                        android:maxLength="4"
                        android:hint="YYYY"
                        android:layout_weight="2"
                        android:background="@drawable/edittext_shape_attr"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="8"
                        android:text="년"
                        android:textColor="#878787"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <!--<EditText-->
                    <!--android:id="@+id/month"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@drawable/edittext_shape_attr"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:inputType="number"-->
                    <!--android:layout_height="wrap_content"/>-->
                    <!--<TextView-->
                    <!--android:text="월"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"/>-->
                    <!--<EditText-->
                    <!--android:id="@+id/day"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:background="@drawable/edittext_shape_attr"-->
                    <!--android:inputType="number"-->
                    <!--android:layout_height="wrap_content"/>-->
                    <!--<TextView-->
                    <!--android:text="일"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"/>-->
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <EditText
                        android:id="@+id/month"
                        android:maxLength="2"
                        android:hint="MM"
                        android:layout_weight="2"
                        android:background="@drawable/edittext_shape_attr"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="월"
                        android:layout_weight="8"
                        android:textColor="#878787"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <EditText
                        android:id="@+id/day"
                        android:maxLength="2"
                        android:hint="DD"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:background="@drawable/edittext_shape_attr"
                        android:inputType="number"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="일"
                        android:layout_weight="8"
                        android:textColor="#878787"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </TableRow>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#002266"
            android:text="내용"/>
        <EditText
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:scrollbars="vertical"
            android:hint="이곳에 내용을 입력해주세요."
            android:textColor="#353535"
            android:textSize="15dp"
            android:background="@drawable/dot_shape_attr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:minLines="10"
            android:maxLines="20"
            android:lines="20"
            android:gravity="top|left"
            android:id="@+id/content"/>
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_shape"
                android:onClick="onClick"
                android:text="저장"/>
            <Button
                android:id="@+id/cancel"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="취소"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>