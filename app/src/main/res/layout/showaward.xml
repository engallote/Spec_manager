<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:padding="20dp" android:background="#368AFF">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/layout_shape_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name"
            android:text="대회명"
            android:textStyle="bold"
            android:textColor="#002266"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="입상일"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/date"
                android:layout_weight="3"
                android:text="입상일"
                android:textStyle="bold"
                android:textColor="#5D5D5D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="상장명"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/awardname"
                android:text="대상"
                android:textStyle="bold"
                android:textColor="#5D5D5D"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="수상기관"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/agency"
                android:text="수상기관"
                android:textStyle="bold"
                android:textColor="#5D5D5D"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TextView
            android:layout_marginTop="20dp"
            android:text="수상내용"
            android:textStyle="bold"
            android:textColor="#002266"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:background="@drawable/textshow_shape_attr"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:id="@+id/content"
                    android:text="내용"
                    android:textColor="#353535"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>

        <TableRow
            android:gravity="center"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/modify"
                android:onClick="onClick"
                android:text="수정"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<Button-->
                <!--android:id="@+id/cancel"-->
                <!--android:onClick="onClick"-->
                <!--android:text="취소"-->
                <!--android:textStyle="bold"-->
                <!--android:textColor="#FFFFFF"-->
                <!--android:background="@drawable/button_shape"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
        </TableRow>
    </LinearLayout>
</LinearLayout>