<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:padding="20dp" android:background="#368AFF">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/layout_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="학교 이름"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/name"
                    android:hint="학교 이름"
                    android:background="@drawable/edittext_shape_attr"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/time"
                    android:entries="@array/구분"
                    android:layout_weight="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <!--<RadioGroup-->
                <!--android:id="@+id/rg1"-->
                <!--android:layout_weight="8"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

                <!--<RadioButton-->
                <!--android:id="@+id/noon"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:checked="true"-->
                <!--android:text="주간" />-->
                <!--<RadioButton-->
                <!--android:id="@+id/night"-->
                <!--android:text="야간"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
                <!--</RadioGroup>-->
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/area"
                    android:layout_weight="4"
                    android:entries="@array/지역"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_weight="6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/main"
                        android:text="본교"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/sub"
                        android:text="분교"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </TableRow>
            <TableRow
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="전공"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="#002266"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="부(복수)전공"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="#002266"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/major"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_shape_attr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/submajor"
                        android:background="@drawable/edittext_shape_attr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="전공평점"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="#002266"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="총평점"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="#002266"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/majorscore"
                        android:layout_weight="3"
                        android:hint="ex) 3.9"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_shape_attr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="점"
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/score"
                        android:inputType="numberDecimal"
                        android:layout_weight="3"
                        android:hint="ex) 4.32"
                        android:background="@drawable/edittext_shape_attr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="점"
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="전공학점"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="#002266"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="이수학점"
                    android:textStyle="bold"
                    android:textColor="#002266"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/majorgrade"
                        android:layout_weight="3"
                        android:hint="ex) 90"
                        android:background="@drawable/edittext_shape_attr"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="점"
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/grade"
                        android:hint="ex) 146"
                        android:layout_weight="3"
                        android:inputType="number"
                        android:background="@drawable/edittext_shape_attr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="점"
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="특이사항"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#002266"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/status"
                    android:layout_weight="2.5"
                    android:entries="@array/상태"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="입학"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#002266"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/year1"
                            android:layout_weight="2"
                            android:hint="YYYY"
                            android:maxLength="4"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="8"
                            android:text="년"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/month1"
                            android:layout_weight="2"
                            android:hint="MM"
                            android:maxLength="2"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="월"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/day1"
                            android:layout_weight="2"
                            android:hint="DD"
                            android:maxLength="2"
                            android:layout_width="match_parent"
                            android:background="@drawable/edittext_shape_attr"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="일"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="졸업(예정)"
                    android:textStyle="bold"
                    android:textColor="#002266"
                    android:layout_gravity="center"
                    android:layout_weight="7.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <!--<Button-->
                <!--android:id="@+id/graduationbtn"-->
                <!--android:text="날짜 선택"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->
                <LinearLayout
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/year2"
                            android:layout_weight="2"
                            android:hint="YYYY"
                            android:maxLength="4"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="8"
                            android:text="년"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/month2"
                            android:layout_weight="2"
                            android:maxLength="2"
                            android:hint="MM"
                            android:background="@drawable/edittext_shape_attr"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="월"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <EditText
                            android:id="@+id/day2"
                            android:layout_weight="2"
                            android:maxLength="2"
                            android:hint="DD"
                            android:layout_width="match_parent"
                            android:background="@drawable/edittext_shape_attr"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="일"
                            android:layout_weight="8"
                            android:textColor="#878787"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

            </TableRow>
            <TextView
                android:layout_marginTop="20dp"
                android:text="참고사항"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:scrollbars="vertical"
                android:hint="이곳에 참고사항을 입력하세요."
                android:textSize="15dp"
                android:textColor="#353535"
                android:layout_marginTop="5dp"
                android:background="@drawable/dot_shape_attr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="6"
                android:lines="6"
                android:gravity="top|left"
                android:id="@+id/etc"/>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/save"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="저장"/>
                <Button
                    android:id="@+id/cancel"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_shape"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="취소"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>