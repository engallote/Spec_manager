<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/shape_edu">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:textStyle="bold"
            android:text="학교 이름"
            android:textColor="#353535"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>
        <LinearLayout
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/time"
                android:text="주간"
                android:textColor="#353535"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="/"
                android:textColor="#353535"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/school"
                android:text="본교"
                android:textColor="#353535"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="/"
                android:textColor="#353535"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/area"
                android:textColor="#353535"
                android:text="지역"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/major"
            android:text="전공"
            android:textColor="#353535"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:text=" / "
            android:textColor="#353535"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/submajor"
            android:text="부전공"
            android:textColor="#353535"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="전공평점/총평점 :"
            android:textColor="#353535"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/majorscore"
            android:layout_marginLeft="10dp"
            android:text="4.5"
            android:textColor="#353535"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:text=" / "
            android:textColor="#353535"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/score"
            android:textColor="#353535"
            android:text="4.5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date1"
            android:textColor="#353535"
            android:text="입학"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:text=" ~ "
            android:textColor="#353535"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date2"
            android:text="졸업"
            android:textColor="#353535"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TextView
        android:id="@+id/grade"
        android:visibility="gone"
        android:text="학점"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/majorgrade"
        android:visibility="gone"
        android:text="전공학점"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/status"
        android:visibility="gone"
        android:text="상태"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/etc"
        android:visibility="gone"
        android:text="참고"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>