<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:padding="20dp" android:background="#368AFF">

    <LinearLayout
        android:background="@drawable/layout_shape_show"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:text="제목"
            android:textStyle="bold"
            android:textColor="#002266"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/date"
            android:text="날짜"
            android:textSize="16dp"
            android:textColor="#002266"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_marginTop="20dp"
            android:id="@+id/scrollView"
            android:background="@drawable/textshow_shape_attr"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:padding="10dp"
                    android:id="@+id/content"
                    android:textSize="16dp"
                    android:text="내용"
                    android:textColor="#353535"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/modify"
                android:onClick="onClick"
                android:text="수정"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<Button-->
                <!--android:id="@+id/cancel"-->
                <!--android:onClick="onClick"-->
                <!--android:text="취소"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>